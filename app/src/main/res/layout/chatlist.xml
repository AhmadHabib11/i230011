                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:layout_marginStart="-10dp"
                    >

                    <!-- Profile Circle -->
                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="@drawable/whitecirclechatlist"
                        android:gravity="center"
                        android:src="@drawable/p4"
                        android:padding="4dp" />

                    <!-- Texts -->
                    <LinearLayout
                        android:id="@+id/chat5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="kiero_d"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="The new design looks cool, b...                                                         .1m"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <!-- Camera on the right -->
                    <ImageView
                        android:id="@+id/camera5"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/chatcam"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:layout_marginStart="-10dp"
                    >

                    <!-- Profile Circle -->
                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="@drawable/whitecirclechatlist"
                        android:gravity="center"
                        android:src="@drawable/p5"
                        android:padding="4dp" />

                    <!-- Texts -->
                    <LinearLayout
                        android:id="@+id/chat6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="maxjacobson"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thank you, bro!                    .2h"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <!-- Camera on the right -->
                    <ImageView
                        android:id="@+id/camera6"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/chatcam"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>




            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/bottomCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_above="@id/homeindicator"
            android:padding="12dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/filledcamera"
                android:layout_marginEnd="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
        </LinearLayout>



        <!-- Home Indicator at Bottom -->
        <ImageView
            android:id="@+id/homeindicator"
            android:src="@drawable/homeindicator"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"/>
    </RelativeLayout>

</RelativeLayout>





